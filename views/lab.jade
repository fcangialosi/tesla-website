doctype html
html(lang='en')
    head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=yes')
      title= title
      link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css')
      link(type='text/css', href='http://fonts.googleapis.com/css?family=Roboto+Slab|Roboto', rel='stylesheet')
    div.container-fluid
      div.row
        div.col-md-1.col-md-offset-1(style="padding-top:20px;")
          a.btn.btn-primary(style="text-transform: uppercase; letter-space: 1px;", href="/user")= user.local.email
        div.col-md-6.col-md-offset-1
          h1(style="font-family: 'Roboto Slab'; text-align: center;"). Anlage Laboratory Availability
        div.col-md-1.col-md-offset-1(style="padding-top:20px;")
          a.btn.btn-danger(style="text-transform: uppercase; letter-space: 1px;", href="/logout"). logout
      div.row(style="padding-top: 30px;")
        div.col-md-6.col-md-offset-3
          h1(style=status.style)= status.type
          if status.by
            h3(style="font-family: 'Roboto Slab';")
              span.label.label-danger(style="margin-right: 7px;"). BY: 
              span= status.by
            h3(style="font-family: 'Roboto Slab';")
              span.label.label-danger(style="margin-right: 7px;"). UNTIL: 
              span= status.until
            h3(style="font-family: 'Roboto Slab';")
              span.label.label-danger(style="margin-right: 7px;"). USING: 
              span= status.using
      div.row(style="padding-top: 30px;")
        div.col-md-4.col-md-offset-2(style="border-right: 8px solid #000;")
          h3(style="font-family: 'Roboto Slab'; text-align: center;") Check-In:
          form(role="form",action="/checkin",method="post")
            div.form-group.roomy(style="padding: 5px;")
              div.input-group
                span.input-group-addon Until
                input.form-control(type="text",placeholder="XX:XX (am/pm)",id="new_until",name="new_until")
            div.form-group.roomy(style="padding: 5px;")
              div.input-group
                span.input-group-addon Using 
                input.form-control(type="text",placeholder="What equipment are you using?",id="new)using",name="new_using")
            div.roomy(style="padding: 5px;")
              button.btn.btn-lg.btn-block.btn-success(type="submit") Submit
        div.col-md-3
          div.row(style="padding-left: 15px; padding-top:40px;")
            div.roomy(style="padding: 5px;")
              a.btn.btn-lg.btn-block.btn-danger(href="/checkout"). Checkout
          div.row(style="padding-left: 15px; padding-top:15px;")
            div.roomy(style="padding: 5px;")
              a.btn.btn-lg.btn-block.btn-warning(href="/future"). Request Future Time
      if msg
        div.row(style="margin-top:30px;")
          div.col-md-7.col-md-offset-2
            div.alert.alert-warning
              span= msg